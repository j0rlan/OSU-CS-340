<div class="container">
   <h3>Artwork</h3>
</div>
<div class="container">
   <form autocomplete="off" action="/addArtwork" method="post" name="add" id="addArtwork">
      <fieldset>
         <legend>Add Artwork</legend>
         <div>
            <input type="text" name="title" placeholder="Title (blank for untitled)" id="title">
         </div>
         <div class="autocomplete">
            <input type="text" name="artist" placeholder="Artist (blank for unknown)" id="artist">
            <input type="button" value="New Artist" id="newArtistButton">
         </div>
         <div class="autocomplete">
            <input type="text" name="medium" placeholder="Medium" id="medium" required>
            <input type="button" value="New Medium" id="newMediumButton">
         </div>
         <div class="autocomplete">
            <input type="text" name="style" placeholder="Style" id="style" required>
            <input type="button" value="New Style" id="newStyleButton">
         </div>
         <div class="autocomplete">
            <input type="text" name="wing" placeholder="Wing" id="wing" required>
            <input type="button" value="New Wing" id="newWingButton">
         </div>
         <div>
            <input onfocus="(this.type='date')" name="completed" placeholder="Completion Date" id="completed">
         </div>
         <div>
            <input type="text" name="city" placeholder="City of Origin" id="city">
         </div>
         <div>
            <input type="text" name="country" placeholder="Country of Origin" id="country">
         </div>
         <div>
            <textarea form="addArtwork" placeholder="Description" id="description"></textarea>
         </div>
         <input type="submit" name="add" value="add artwork" id="addButton">
      </fieldset>
   </form>
</div>
<script src="addArtworkScript.js"></script>
